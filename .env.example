# PAI - Personal AI Infrastructure
# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it's excluded in .gitignore

# ============================================================================
# ANTHROPIC / CLAUDE
# ============================================================================

# Anthropic API Key (get from: https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_api_key_here

# Claude Code Configuration
CLAUDE_CODE_CONFIG_PATH=~/.claude

# ============================================================================
# MCP SERVER CONFIGURATION
# ============================================================================

# GitHub Personal Access Token (for github MCP server)
# Scopes needed: repo, read:org
GITHUB_TOKEN=your_github_token_here

# Context7 API Key (if required)
CONTEXT7_API_KEY=your_context7_key_here

# ============================================================================
# SKILL-SPECIFIC CONFIGURATION
# ============================================================================

# Fabric CLI Configuration
FABRIC_API_KEY=your_fabric_api_key_here
FABRIC_MODEL=gpt-4

# Research Skill - API Keys
PERPLEXITY_API_KEY=your_perplexity_key_here
GEMINI_API_KEY=your_gemini_key_here

# Agent Observability
OBSERVABILITY_PORT=3000
OBSERVABILITY_DB_PATH=./observability.sqlite

# FFUF (Web Fuzzing)
FFUF_WORDLIST_DIR=/usr/share/wordlists
FFUF_OUTPUT_DIR=./results

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Node Environment
NODE_ENV=development

# Debug Level
DEBUG=false
LOG_LEVEL=info

# ============================================================================
# PATHS
# ============================================================================

# PAI Directory (usually ~/.claude)
PAI_DIR=~/.claude

# Skills Directory
SKILLS_DIR=~/.claude/skills

# Protocols Directory
PROTOCOLS_DIR=~/.claude/protocols

# ============================================================================
# OPTIONAL INTEGRATIONS
# ============================================================================

# Slack Webhook (for notifications)
SLACK_WEBHOOK_URL=

# Discord Webhook (for notifications)
DISCORD_WEBHOOK_URL=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# ============================================================================
# SECURITY
# ============================================================================

# JWT Secret (for authentication if needed)
JWT_SECRET=your_random_secret_here

# Session Secret
SESSION_SECRET=your_session_secret_here

# ============================================================================
# NOTES
# ============================================================================

# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values
# 3. NEVER commit .env to git
# 4. Use strong, unique values for secrets
# 5. Rotate credentials regularly
# 6. Use environment-specific values (dev/staging/prod)

# End of .env.example
